@import "variables.styl"

$default-button-bg = #28597b;
$positive-button-bg = $mediumGreen;
$primary-button-bg = $mediumBlue;
$negative-button-bg = $mediumRed;


body {
	margin: 0;
	font-family: 'Ropa Sans';
	height: 100%;
	-webkit-font-smoothing: antialiased;
	overflow: hidden;
}


.input{
	display: inline-block;
	padding: 6px 12px;
	margin: 5px 0;
	font-size: 14px;
	font-weight: 400;
	line-height: 1.42857143;
	box-shadow: 1px 1px 3px rgba(0, 27, 42, .8);
  border: 1px solid #08496a;
  background: rgba(0, 66, 85, .2);
	color: $ap-light-grey-4;
	border-radius: 2px;
}


.button {
	display: inline-block;
	padding: 6px 12px;
	margin: 5px 0;
	font-size: 14px;
	font-weight: 400;
	line-height: 1.42857143;
	background-color: #28597b;
	color: $ap-light-grey-4;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	-ms-touch-action: manipulation;
	touch-action: manipulation;
	cursor: pointer;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	background-image: none;
	border: none;
	border-radius: 4px;
	&:hover {
		background-color: darken($default-button-bg, 10%);
	}

	&.button-positive {
    	background-color: $positive-button-bg;

		&:hover {
	    	background-color: darken($positive-button-bg, 5%);
		}
	}

	&.button-primary {
    	background-color: $primary-button-bg;
  	&:hover {
	    	background-color: darken($primary-button-bg, 10%);
		}
	}

	&.button-negative {
    	background-color: $negative-button-bg;
			&:hover {
	    	background-color: darken($negative-button-bg, 5%);
		}
	}
}
