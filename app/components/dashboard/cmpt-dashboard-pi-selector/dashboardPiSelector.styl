@import "variables.styl"
.cmpt-dashboard-pi-selector {
	.container{
		background: darken($augmentedColorLight,-2%);
		position: absolute;
		color: $ap-light-grey-4;
		width: 100%;
		top: -114px;
		z-index: 1;
		transition: all 100ms ease-in-out;
		.pi-tiles{
			cursor: pointer;
			background: darken($augmentedColorLight,-10%);
			text-align: center;
			margin: 10px 10px 10px 0px;
			padding: 10px;
			float: left;
			.title{
				font-size: 20px;
			}
			.description{
				opacity:0.7;
			}
			&.selected{
				background: darken($augmentedColorLight,-5%);
				.check{
					color: $mediumGreen;
				}
			}
			&:first-child{
				margin-left: 10px;
			}
		}
		.panel-opener{
			cursor: pointer;
			background: darken($augmentedColorLight,-10%);
			padding: 5px;
			clear: both;
			text-align: center;
		}
		&.opened{
			top: 0px;
		}
	}
}
