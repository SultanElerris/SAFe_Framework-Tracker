@import "variables.styl"
.cmpt-nav-menu {
	display: inline-block;
	width: 140px;
	height: calc(100vh);
	border-right: 1px solid $augmentedColorDark;
	ul {
		a {
			color: $ap-light-grey-4;
			text-decoration: none;
		}
		li {
			padding: 10px;
			border-bottom: 1px solid $augmentedColorDark;
			color: $ap-light-grey-4;
			cursor: pointer;		
			i {
				margin-right: 5px;
			}
			&:hover{
				background-color: $augmentedColorLight;
			}
		}
	}

}
