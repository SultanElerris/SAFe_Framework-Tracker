.cmpt-ui-state-selector {
	display: flex;
  height: 34px;
  margin:5px;
  .option{
    text-transform: uppercase;
    flex: 1;
    color: #fff;
    background-color: #337ab7;
    border-color: #2e6da4;
    padding: 9px 12px;
    cursor: pointer;
    border: 1px solid transparent;
    white-space: nowrap;
		line-height: 1;
    &:hover{
      color: #fff;
      background-color: #286090;
      border-color: #204d74;
    }
    &:active{
      color: #fff;
      background-color: #204d74;
      border-color: #122b40;
    }
    &.active{
      color: #fff;
      background-color: #286090;
      border-color: #204d74;
    }
    &:first-child{
      border-top-left-radius: 5px;
      border-bottom-left-radius: 5px;
    }
    &:last-child{
      border-top-right-radius: 5px;
      border-bottom-right-radius: 5px;
    }
  }
}
